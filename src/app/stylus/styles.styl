@import 'partials/normalize.styl'
// @import 'partials/foundation.min.css'
@import 'partials/mixins.styl'
@import 'partials/variables.styl'
@import 'partials/svg-sprite.styl'
@import 'partials/png-sprite.styl'

// Lost grid setups
@lost gutter 40px
// @lost cycle none

a
  text-decoration none

select
  appearance none
  border-radius 0

input:focus
select:focus
textarea:focus
button:focus
  outline none

html
  font-size 10px

h1
h2
h3
h4
h5
h6
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-margin-start 0
  -webkit-margin-end 0
  font-size 2rem

p
  -webkit-margin-before: 0
  -webkit-margin-after: 0
  -webkit-margin-start: 0
  -webkit-margin-end: 0

fieldset
  -webkit-margin-start 0
  -webkit-margin-end 0
  -webkit-padding-before 0
  -webkit-padding-start 0
  -webkit-padding-end 0
  -webkit-padding-after 0

button
  color none
  padding 0
  border none
  border-image-source none
  border-image-slice none
  border-image-width none
  border-image-outset none
  border-image-repeat none

ul    
  list-style-type disc;
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-margin-start 0
  -webkit-margin-end 0
  -webkit-padding-start 0

*
  box-sizing border-box

hr
  border 0
  border-top 1px solid #dce0e0


body
  clearfix()
  
  header
    width 100%
    height 4.6rem
    background-color headerBlue
    lost-align vertical
    
    .s-logo
      margin-left 2.8rem
  
  .container
    lost-center 852px
    padding 2rem 0
    
    .add-person-form
      margin-top 2rem
      height 5rem
      input
      select
        height inherit
        font-size 2rem
        padding 0 2rem
      
      .name-input
        lost-column 5/12
      
      .gender-input
        lost-column 2.5/12
      
      .age-input
        lost-column 3/12
      
      .add-person-btn
        lost-column 1.5/12
    
    .person-table
      margin-top 5rem
      
      th
        font-size 1.5rem
        span
          float left
        i
          float left
          margin-left 1rem
      
      td
        font-size 1.3rem
        i
          float right
          margin-left 1rem
          cursor pointer
          hover-opacity()
          transition()
      
      .header-name
        lost-column 5/12
      .header-gender
        lost-column 2.5/12
      .header-age
        lost-column 3/12
        
        
